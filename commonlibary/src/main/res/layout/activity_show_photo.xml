<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.example.commonlibary.pickerview.takephoto.activity.PhotoViewViewPager
            android:id="@+id/pvvpPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:paddingBottom="@dimen/space96" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/savebigpic"
                android:gravity="center"
                android:visibility= "invisible"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/img_count_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>